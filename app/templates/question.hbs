<h2>Answers:</h2>
<div class="container">
  <h2>{{model.query}}</h2>
  <h4>{{model.note}}</h4>

{{#each model.answers as |answer|}}
{{log answer}}
  <div id="commentBlock">
    <p>{{answer.author}}</p>
    <h3>{{answer.message}}</h3>
  </div>
{{/each}}

{{new-answer question=model saveAnswer="saveAnswer"}}

</div>
